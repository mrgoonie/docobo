{
  "name": "docobo",
  "version": "0.1.0",
  "description": "Professional paid community management Discord bot",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:webhooks": "tsx watch src/webhook-server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:webhooks": "node dist/webhook-server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs --coverage",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs tests/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs tests/integration",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs tests/e2e",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs --ci --coverage --maxWorkers=2",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:test:setup": "DATABASE_URL=postgresql://postgres:postgresql@localhost:5432/docobo_test npx prisma migrate deploy",
    "prepare": "husky install"
  },
  "keywords": ["discord", "bot", "payments", "community", "saas"],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@polar-sh/sdk": "^0.9.0",
    "@prisma/client": "^5.22.0",
    "discord.js": "^14.24.2",
    "dotenv": "^16.6.1",
    "fastify": "^4.29.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.25",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "prisma": "^5.22.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  }
}
